{
  "compilerOptions": {
    "lib": ["DOM", "ES2021", "DOM.Iterable"],
    "module": "ESNext",
    "jsx": "react-jsx",
    "target": "ESNext",
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "moduleResolution": "bundler",
    "useDefineForClassFields": true,
    "noImplicitAny": false
  },
  "include": ["src"]
}
